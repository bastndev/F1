{
  "name": "f1",
  "displayName": "F1",
  "description": "Available now: VSCode • Cursor • Windsurf • Trae.ai • Kiro & (Firebase Studio)... 雨",
  "version": "0.3.0",
  "publisher": "bastndev",
  "license": "MIT",
  "preview": true,
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "F1 Quick Switch",
    "productivity",
    "keys maps",
    "toggle",
    "f1"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "homepage": "https://github.com/bastndev/F1#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bastndev/F1.git"
  },
  "bugs": {
    "url": "https://github.com/bastndev/F1/issues"
  },
  "author": {
    "name": "Gohit Bastian",
    "email": "gobasdev@gmail.com",
    "url": "https://www.bastndev.com"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/bastndev"
  },

  "activationEvents": [],
  "main": "./dist/extension.js",

  "contributes": {
    "views": {
      "f1-functions": [
        {
          "id": "f1-shortcuts",
          "name": "Shortcuts",
          "icon": "$(zap)",
          "when": "true"
        },
        {
          "id": "f1-editor-controls",
          "name": "Editor Controls",
          "icon": "symbol-structure",
          "when": "true"
        },
        {
          "id": "f1-extensions",
          "name": "extension",
          "icon": "symbol-structure",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "f1-functions",
          "title": "F1",
          "icon": "$(zap)"
        }
      ]
    },
    "commands": [
      {
        "command": "f1.togglePanel",
        "title": "Toggle F1 Panel",
        "category": "F1",
        "icon": "$(ellipsis)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "f1.togglePanel",
          "when": "view == f1-shortcuts",
          "group": "navigation"
        }
      ]
    }
  },

  "scripts": {
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "mocha": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}