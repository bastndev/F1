{
  "name": "f1",
  "displayName": "F1",
  "description": "Available now: VSCode • Cursor • Windsurf • Trae.ai • Kiro & (Firebase Studio)... 雨",
  "version": "0.3.0",
  "publisher": "bastndev",
  "license": "MIT",
  "preview": true,
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "F1 Quick Switch",
    "toggle",
    "keys maps",
    "f1",
    "productivity"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "homepage": "https://github.com/bastndev/F1#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bastndev/F1.git"
  },
  "bugs": {
    "url": "https://github.com/bastndev/F1/issues"
  },
  "author": {
    "name": "Gohit Bastian",
    "email": "gobasdev@gmail.com",
    "url": "https://www.bastndev.com"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/bastndev"
  },

  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "f1-functions", 
          "title": "F1",
          "icon": "assets/images/icon/f1.svg"
        }
      ]
    },
    "views": {
      "f1-functions": [
        {
          "id": "f1-toggles",
          "name": "Function Keys",
          "icon": "$(list-ordered)",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "f1.refreshStatus",
          "when": "view == f1-toggles",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "shuu.toggleMarkdownWrap",
        "title": "Toggle Markdown Word Wrap"
      },
      {
        "command": "shuu.toggleCodeFormatting",
        "title": "Toggle Word Wrap"
      },
      {
        "command": "shuu.toggleFormatOnSave",
        "title": "Toggle Format On Save"
      },
      {
        "command": "shuu.toggleStickyScroll",
        "title": "Toggle Sticky Scroll"
      },
      {
        "command": "shuu.toggleAISuggestions",
        "title": "Toggle AI Suggestions"
      },
      {
        "command": "shuu.toggleBreadcrumbs",
        "title": "Toggle Breadcrumbs"
      },
      {
        "command": "shuu.toggleMinimap",
        "title": "Toggle Minimap"
      },
      {
        "command": "shuu.toggleCompactFolders",
        "title": "Toggle Compact Folders"
      },
      {
        "command": "shuu.toggleHover",
        "title": "Toggle Hover"
      },
      {
        "command": "shuu.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "shuu.toggleFolding",
        "title": "Toggle Code Folding"
      },
      {
        "command": "f1.refreshStatus",
        "title": "Refresh Status",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "shuu.toggleMarkdownWrap",
        "key": "f1",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleMinimap",
        "key": "f2",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleFormatOnSave",
        "key": "f3",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleAISuggestions",
        "key": "f4",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleHover",
        "key": "f5",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleFolding",
        "key": "f6",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleStickyScroll",
        "key": "f7",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleCompactFolders",
        "key": "f8",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleBreadcrumbs",
        "key": "ctrl+f2",
        "when": "editorTextFocus"
      },
      {
        "command": "shuu.toggleCodeFormatting",
        "key": "ctrl+f1",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "mocha": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}